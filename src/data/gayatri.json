{
  "title": "गायत्री मंत्र",
  "verses": [
    {
      "id": 1,
      "sanskrit": "ॐ भूर्भुवः स्वः",
      "marathi": "ॐ पृथ्वी, अंतरिक्ष आणि स्वर्ग",
      "explanation": "[भूः = पृथ्वी, भुवः = अंतरिक्ष, स्वः = स्वर्ग]",
      "color": "purple"
    },
    {
      "id": 2,
      "sanskrit": "तत्सवितुर्वरेण्यं",
      "marathi": "त्या सूर्यदेवाचे वरण करण्यासारखे",
      "explanation": "[तत् = तो, सवितुः = सूर्यदेव, वरेण्यं = वरण करण्यासारखे]",
      "color": "purple"
    },
    {
      "id": 3,
      "sanskrit": "भर्गो देवस्य धीमहि",
      "marathi": "आम्ही त्या देवाच्या तेजाचे ध्यान करतो",
      "explanation": "[भर्गः = तेज, देवस्य = देवाचे, धीमहि = आम्ही ध्यान करतो]",
      "color": "purple"
    },
    {
      "id": 4,
      "sanskrit": "धियो यो नः प्रचोदयात् ॥",
      "marathi": "तो आमच्या बुद्धीला प्रेरणा देवो",
      "explanation": "[धियः = बुद्धी, यः = जो, नः = आमची, प्रचोदयात् = प्रेरणा देवो]",
      "color": "purple"
    }
  ]
